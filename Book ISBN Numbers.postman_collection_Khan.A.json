	"item": [
		{
			"name": "Is Valid ISBN13 Number",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"/* //Перевірка статусу результату",
							"pm.test(\"ISBN is valid\", function () {",
							"    pm.response.to.have.body(/<m:IsValidISBN13Result>true<\\/m:IsValidISBN13Result>/);",
							"}); */",
							"",
							"//Містить тег IsValidISBN13Response",
							"pm.test(\"Contains IsValidISBN13Response\", function () {",
							"    pm.response.to.have.body(/IsValidISBN13Response/);",
							"});",
							"",
							"//Відповідь є XML",
							"pm.test(\"Response is XML\", function () {",
							"    pm.expect(pm.response.headers.get(\"Content-Type\")).to.include(\"xml\");",
							"});",
							"",
							"//Парсинг XML і перевірка значення",
							"pm.test(\"Parsed XML returns true\", function () {",
							"    var jsonData = xml2Json(pm.response.text());",
							"    pm.expect(jsonData[\"soap:Envelope\"][\"soap:Body\"][\"m:IsValidISBN13Response\"][\"m:IsValidISBN13Result\"]).to.eql(\"true\");",
							"});",
							"",
							"//Тіло відповіді містить тег Result з булевим значенням",
							"pm.test(\"Response contains boolean result\", function () {",
							"    const body = pm.response.text();",
							"    pm.expect(body).to.match(/<m:IsValidISBN13Result>(true|false)<\\/m:IsValidISBN13Result>/);",
							"});",
							"",
							"//Перевірка наявності namespace http://webservices.daehosting.com/ISBN",
							"pm.test(\"Correct namespace is used\", function () {",
							"    pm.expect(pm.response.text()).to.include('xmlns:m=\"http://webservices.daehosting.com/ISBN\"');",
							"});",
							"",
							"//Статус-код 200",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"//Content-Type правильний",
							"pm.test(\"Content-Type is text/xml\", function () {",
							"    pm.response.to.have.header(\"Content-Type\", \"text/xml; charset=utf-8\");",
							"});",
							"",
							"//Response time < 1000ms",
							"pm.test(\"Response time is less than 1000ms\", function () {",
							"    pm.expect(pm.response.responseTime).to.be.below(1000);",
							"});",
							"",
							"//Server header існує",
							"pm.test(\"Header contains Server\", function () {",
							"    pm.response.to.have.header(\"Server\");",
							"});",
							"",
							"//Content-Length — число",
							"pm.test(\"Content-Length is a number\", function () {",
							"    var length = pm.response.headers.get(\"Content-Length\");",
							"    pm.expect(length).to.match(/^\\d+$/);",
							"});",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				},
				{
					"listen": "prerequest",
					"script": {
						"exec": [
							"// Масив валідних ISBN-13",
							"const validISBNs = [",
							"    \"978-1-4612-9090-2\",",
							"    \"978-0-545-01022-1\",",
							"    \"978-0-262-13472-9\",",
							"    \"978-0-596-52068-7\",",
							"    \"978-0-201-03801-9\",",
							"    \"978-1-56619-909-4\",",
							"    \"978-0-306-40615-7\",",
							"    \"978-0-13-110362-7\",",
							"    \"978-0-7432-7356-5\"",
							"];",
							"",
							"// Випадковий вибір",
							"const randomISBN = validISBNs[Math.floor(Math.random() * validISBNs.length)];",
							"",
							"// Запис у змінну колекції",
							"pm.collectionVariables.set(\"isbn13\", randomISBN);",
							"",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "text/xml; charset=utf-8",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "<?xml version=\"1.0\" encoding=\"utf-8\"?>\n<soap:Envelope xmlns:soap=\"http://schemas.xmlsoap.org/soap/envelope/\">\n  <soap:Body>\n    <IsValidISBN13 xmlns=\"http://webservices.daehosting.com/ISBN\">\n      <sISBN>{{isbn13}}</sISBN>\n    </IsValidISBN13>\n  </soap:Body>\n</soap:Envelope>\n"
				},
				"url": {
					"raw": "http://webservices.daehosting.com/services/isbnservice.wso",
					"protocol": "http",
					"host": [
						"webservices",
						"daehosting",
						"com"
					],
					"path": [
						"services",
						"isbnservice.wso"
					]
				},
				"description": "The test is done by calculation on the first 12 digits and compare the result with the checksum number at the end. You have to pass a 13 digits number."
			},
			"response": []
		},
